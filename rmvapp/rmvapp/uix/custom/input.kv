
<CustomInput>:
    font_size: self.height * 0.5
    multiline: False
    write_tab: False
    halign: 'center'
    text_size: (None, None)
    cursor_width: 1
    padding: [5, (self.height - self.line_height) / 2]
    scroll_x: 1.0
    foreground_color: 1, 1, 1, 1
    background_color: 0, 0, 0, 0 
    cursor_color: 0.9, 0.9, 0.9, 1
    
    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 1 
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]

        Color:
            rgba: (0.5, 0.5, 0.5, 1) if not self.focus else (0.3, 0.7, 1, 1) 
        Line:
            rounded_rectangle: (*self.pos, *self.size, 10)
            width: 1.5

